<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="251.0" prefWidth="375.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="aydini.javafxdemo.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="fontSizeTextField" promptText="12.0" />
   <Slider fx:id="fontSizeSlider" blockIncrement="1.0" majorTickUnit="5.0" max="40.0" min="10.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" value="12.0" />
   <TextField fx:id="usernameTextField" promptText="enter username" />
   <PasswordField fx:id="passwordField" promptText="enter your password" />
    <Button fx:id="signinButton" disable="true" onAction="#onSigninButtonClick" text="Signin" />
</VBox>
